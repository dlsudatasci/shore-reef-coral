datasource db {
  provider = "mysql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id               Int               @id @default(autoincrement())
  email            String            @unique
  password         String
  salt             String
  firstName        String
  lastName         String
  affiliation      String?
  contactNumber    String?
  UsersOnTeam      UsersOnTeams[]
  PasswordRecovery PasswordRecovery?
  SurveyLeader     Survey[]          @relation("SurveyLeader")
  SurveyUploader   Survey[]          @relation("SurveyUploader")  
  CoralAssessment  CoralAssessment[]
  isAdmin          Boolean           @default(false)
}

model Team {
  id              Int               @id @default(autoincrement())
  name            String            @unique
  province        String
  town            String
  affiliation     String?
  status          TeamStatus        @default(PENDING)
  isVerified      Boolean           @default(false)
  UsersOnTeam     UsersOnTeams[]
  Survey          Survey[]
  CoralAssessment CoralAssessment[]
  rejectionReason RejectionReason?
}

model RejectionReason {
  id         Int     @id @default(autoincrement())
  reason     String  @db.VarChar(480) 
  team       Team    @relation(fields: [teamId], references: [id])
  teamId     Int     @unique
}

enum TeamStatus {
  APPROVED
  REJECTED
  PENDING
}

model UsersOnTeams {
  id          Int     @id @default(autoincrement())
  team        Team    @relation(fields: [teamId], references: [id])
  teamId      Int
  user        User    @relation(fields: [userId], references: [id])
  userId      Int
  isLeader    Boolean @default(false)
  isScientist Boolean @default(false)
  status      Status  @default(PENDING)

  @@index([userId])
  @@index([teamId])
  @@index([isLeader])
  @@index([status])
}

enum Status {
  ACCEPTED
  REJECTED
  PENDING
  INACTIVE
}

model PasswordRecovery {
  id     Int    @id @default(autoincrement())
  user   User   @relation(fields: [userId], references: [id])
  userId Int
  code   String

  @@unique([userId])
  @@index([userId])
}

model ManagementType {
  id     Int      @id @default(autoincrement())
  type   String   @unique
  Survey Survey[]
}

model Survey {
  id               Int            @id @default(autoincrement())
  dbSurveyNum      String         
  date             DateTime
  stationName      String
  startLongtitude  Float
  startLatitude    Float
  secondLongtitude Float
  secondLatitude   Float
  gpsDatum         String
  barangay         String
  town             String
  province         String
  additionalInfo   String         @default("")
  managementTypeId Int
  managementType   ManagementType @relation(fields: [managementTypeId], references: [id])
  teamId           Int
  team             Team           @relation(fields: [teamId], references: [id])
  leaderId         Int
  leader           User           @relation(name: "SurveyLeader", fields: [leaderId], references: [id])
  uploaderId       Int
  uploader         User           @relation(name: "SurveyUploader", fields: [uploaderId], references: [id])
  leaderNum        String?
  scientist        String
  volunteer1       String
  volunteer2       String
  volunteer3       String
  volunteer4       String?
  volunteer5       String?
  volunteer6       String?
  C30ImageSet      C30ImageSet?
  dataType         SurveyDataType 
  isVerified       Boolean        @default(false)
  isComplete       Boolean        @default(false)
  submissionType   SubmissionType
  tag              String         

  @@index([teamId])
}

model C30ImageSet {
  id              Int               @id @default(autoincrement())
  surveyId        Int               @unique
  survey          Survey            @relation(fields: [surveyId], references: [id])
  imageCount      Int
  C30Image        C30Image[]
  CoralAssessment CoralAssessment[]
}

model C30Image {
  id         Int         @id @default(autoincrement())
  imageSetId Int
  imageSet   C30ImageSet @relation(fields: [imageSetId], references: [id])
  fileName   String
  CoralInfo  CoralInfo[]
}

model CoralAssessment {
  id         Int         @id @default(autoincrement())
  imageSetId Int
  imageSet   C30ImageSet @relation(fields: [imageSetId], references: [id])
  teamId     Int
  team       Team        @relation(fields: [teamId], references: [id])
  leaderId   Int
  leader     User        @relation(fields: [leaderId], references: [id])
  scientist  String
  volunteer1 String
  volunteer2 String
  volunteer3 String
  volunteer4 String?
  volunteer5 String?
  volunteer6 String?
  CoralInfo  CoralInfo[]
}

model CoralInfo {
  id                Int             @id @default(autoincrement())
  coralAssessmentId Int
  coralAssessment   CoralAssessment @relation(fields: [coralAssessmentId], references: [id])
  imageId           Int
  image             C30Image        @relation(fields: [imageId], references: [id])
  point1            String
  point2            String
  point3            String
  point4            String
  point5            String
  point6            String
  point7            String
  point8            String
  point9            String
  point10           String
}

enum SubmissionType {
  CPCE
  ALWAN
  MANUAL
}

enum SurveyDataType {
  PRIVATE
  PUBLIC
}
