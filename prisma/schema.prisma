datasource db {
  provider = "mysql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id             Int               @id @default(autoincrement())
  email          String            @unique
  password       String
  salt           String
  firstName      String
  lastName       String
  affiliation    String?
  contactNumber  String?
  UsersOnTeam    UsersOnTeams[]
  PasswordRevery PasswordRecovery?
}

model Team {
  id          Int            @id @default(autoincrement())
  name        String
  UsersOnTeam UsersOnTeams[]
}

model UsersOnTeams {
  team        Team    @relation(fields: [teamId], references: [id])
  teamId      Int
  user        User    @relation(fields: [userId], references: [id])
  userId      Int
  isLeader    Boolean
  isScientist Boolean
  status      String

  @@id([teamId, userId])
}

model PasswordRecovery {
  userId Int    @id
  user   User   @relation(fields: [userId], references: [id])
  code   String
}
